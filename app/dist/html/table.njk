<body>
<h1>LIST</h1>
    Query parametar: <input type="text" name="query"><br>
    <button type="submit" id="querySubmit" >Submit</button>
    <input type="hidden" id="currentPage" name="currentPage" value="1">
    <input type="hidden" id="perPage" name="perPage" value="25">
    <table class="list-group">
    <thead>
    <tr>
      <th>Name</th>
      <th>Group</th>
      <th>Manufactur</th>
    </tr>
    </thead>
      <h3>Is it from database : {{list.fromDb}}</h3>
      <h5>Total : {{list.length}}</h5>
      {% for item in list %}
      {% set group = item.group %}
      {% if list.fromDb %}
       {% set group = item.category %}
      {% endif %}
        <tr>
          <td>{{item.name}}</td>
          <td>{{group}}</td>
          <td>{{item.manu}}</td>
        </tr>
     {% endfor %}
    </table>
